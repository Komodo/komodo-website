<div class="featured-wrap">
    <div class="featured">
        <%- @content %>
    </div>
    <img src="/images/misc/komodo256.ide.png" align="right">
    <div class="links">
        <%- @getAsList(@db.startpage().links, "unstyled") %>
    </div>
</div>
<div class="news">
    <% for document in @_.first @getBlogsFiltered(), 4: %>
    <dl>
        <dt>
            <a href="<%= document.url %>">
                <%= document.title %>
            </a>
        </dt>
        <dd>
            От <%= document.author %>, <%= document.humanDate %>
        </dd>
    </dl>
    <% end %>
    <p><a href="/blog">Смотреть больше..</a></p>
</div>
