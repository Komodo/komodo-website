<rss version="2.0">
    <channel>
        <title>Komodo Blogs</title>
        <description>Komodo blog RSS лента </description>
        <link>http://komodoide.com/blog/</link>
        <language>ru</language>
        <webMaster>support@activestate.com (ActiveState Support)</webMaster>
        <lastBuildDate><%= @moment().format("ddd, D MMM YYYY hh:mm:ss Z") %></lastBuildDate>
        <generator>DocPad v6.64.0</generator>
<% for document in @getBlogsFiltered({}, @_filters, @document): %>
        <item>
            <title><%= document.title %></title>
            <link><%= @site.url + document.url %></link>
            <pubDate><%= @moment(document.date).format("ddd, D MMM YYYY hh:mm:ss Z") %></pubDate>
            <description><%= document.description %></description>
            <guid><%= @site.url + document.url %></guid>
        </item>
<% end %>
    </channel>
</rss>
