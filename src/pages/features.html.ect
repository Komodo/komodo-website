<div class="try-buy-buttons global">
    <div class="inner">
        <a class="button primary" href="/download">
            <i class="icon icon-download"></i> Try Komodo IDE
        </a>
        <a class="button" href="/pricing">
            <i class="icon icon-shopping-cart"></i> Buy Komodo IDE
        </a>
    </div>
</div>

<h1>Komodo Features</h1>

<div class="clearfix"></div>

<div class="groups">

    <% for k,group of @db.features(): %>
    <div class="group-<%= group.id %>">
        <img src="/images/icons/features/<%= group.id %>-small.png">
        <h2><%= group.name %></h2>
        <% if group.featured: %>
        <div>
            <% for _k,featured of group.featured: %>
            <a href="/images/screenshots/features/<%= featured.image %>.png" title="<%= featured.name %><% if featured.description?: %><%= ' - ' + featured.description %><% end %>" class="lightbox">
                <img src="/images/screenshots/features/<%= featured.image %>-small.png" alt="<%= featured.name %><% if featured.description?: %><%= ' - ' + featured.description %><% end %>">
            </a>
            <% end %>
        </div>
        <% end %>
        <ul>
            <% for _k,feature of group.items: %>
            <li>
                <a href="#" class="tooltip" title="<strong><%= feature.name %></strong><br><%= feature.description %>"><%= feature.name %></a>
                <strong><%= feature.name %></strong>
                <% if feature.isNew: %>
                <span class="badge">
                    NEW
                </span>
                <% end %>
                <p>
                    <%= feature.description %>
                </p>
            </li>
            <% end %>
        </ul>
    </div>

    <% end %>
</div>

