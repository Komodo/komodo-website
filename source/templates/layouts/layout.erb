    <head>

        <!-- Standard Meta -->
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <!-- Site Properities -->
        <title><%= get_title(defined?(post) ? post : false) %></title>
        <meta name="description" content="<%= current_page.data.description || description %>" />
        <meta name="keywords" content="<%= current_page.data.keywords || keywords %>" />
        
        <!-- Social Media Properties -->
        <meta property="og:title" content="<%= get_social_description(defined?(post) ? post : false, false) %>" />
        <meta property="og:type" content="article" />
        <meta property="og:description" content="<%= current_page.data.description || description %>" />
        
        <% if current_page.data.image %>
        <meta property="og:image" content="<%= current_page.data.image %>" />
        <% end %>
    
        <% if defined?(post) and post.has_key?("featuredImage") %>
        <meta property="og:image" content="<%= post.featuredImage.url %>" />
        <% end %>

        <link rel="icon" href="/assets/images/favicon.ico">

        <!-- Styles -->
        <%= stylesheet_link_tag "style" %>

        <link href='http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,700italic,400,600,700' rel='stylesheet' type='text/css'>

        
    </head>
    <body>

        <noscript>
            <div id="noscript-warning">
                <h2>JavaScript Recommended</h2>
                <p>
                    Some of the functionality on this website relies on JavaScript
                    to be enabled. Your experience will unfortunately be negatively
                    affected if you do not use JavaScript.
                </p>
            </div>
        </noscript>

        <script type="text/javascript">
            document.body.classList.remove("no-js")
        </script>

        <!-- Main Container -->
        <div id="container" class="container-<%= current_page.data.basenameOrig || get_basename() %>">
            <a name="top"></a>
            <%= partial('header') %>
            <%= yield %>
            <div id="footer_push"></div>
        </div>

        <!-- Footer -->
        <footer>
            <div class="columns">
                <div class="navigation">
                    <h3>Navigation</h3>
                    <%= get_list(data.footer.nav.navigation) %>
                </div>
                <div class="support">
                    <h3>Support</h3>
                    <%= get_list(data.footer.nav.support) %>

                    <h3>ActiveState</h3>
                    <%= get_list(data.footer.nav.activestate) %>
                </div>
                <div class="communicate">
                    <%= get_list(data.footer.nav.social, "social") %>

                    <p>&nbsp;</p>
                    <a href="https://twitter.com/KomodoIDE" class="twitter-follow-button" data-show-count="false" data-dnt="true">Follow @KomodoIDE</a>

                    <a href="https://twitter.com/share" class="twitter-share-button" data-text="<%= get_social_description(defined?(post) ? post : false) %>" data-dnt="true">Tweet</a>

                    <p>&nbsp;</p>

                    <script>
                        document.write('<div class="fb-like" data-href="'+location.href+'" data-layout="button" data-action="recommend" data-show-faces="false" data-share="true"></div>');
                    </script>

                    <h3>Communicate</h3>
                    <%= get_list(data.footer.nav.communicate) %>
                </div>
                <div class="newsletter">
                    <!--
                    <form>
                        <h3>Newsletter Sign Up</h3>
                        <input type="text" placeholder="Enter your E-Mail address"/>
                    </form>
                    -->

                    <p>
                        ActiveState Software Inc.
                        Suite 1700-409 Granville St.,
                        Vancouver, BC,
                        V6C 1T2, Canada
                    </p>
                    <p>&nbsp;</p>
                    <p>
                        General Enquiries: 778.786.1100 <br>
                        Fax: 778.786.1133 <br>
                        Sales: 1.866.631.4581
                    </p>
                    <p>&nbsp;</p>
                    <p class="copytrade">
                        © 2015 ActiveState Software Inc. All rights reserved. ActiveState®, Komodo®, ActivePerl®, ActivePython®, ActiveTcl®, and Stackato® are registered trademarks of ActiveState. All other marks are property of their respective owners.
                    </p>
                    <p>&nbsp;</p>
                    <p>
                        <a href="/privacy">Privacy Policy</a>
                    </p>
                </div>
            </div>
        </footer>
        
